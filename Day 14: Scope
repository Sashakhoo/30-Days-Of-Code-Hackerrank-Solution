

//class constructor that saves parameter into int[]elements 
public Difference(int [] elements){
    this.elements = elements;
}

//method compute difference that calculate difference 
public void computeDifference(){
 int min = elements[0];
 int max= elements [0];
 for(int i=0 ;i<elements.length;i++){
     if(elements[i]<min){
         min=elements [i];
     }
     if(elements[i]>max){
         max=elements [i];
     }
 }


 maximumDifference = (Math.abs (max - min)); 


}
	

